    <%= link_to("create product",new_admin_output_bill_path(:owner_type=>"Product"),{:class=>"popup"})%> &nbsp;&nbsp; <%= link_to("create workshop",new_admin_output_bill_path(:owner_type => "Workshop"),{:class=>"popup"})%>
